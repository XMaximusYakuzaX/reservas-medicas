# =============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================

# URL base de la aplicación
APP_URL=http://localhost:3000

# Entorno de ejecución (development, production, testing)
APP_ENV=development

# Clave secreta para la aplicación
APP_KEY=your_app_key_here

# Puerto donde corre la aplicación
PORT=3000

# =============================================
# BASE DE DATOS
# =============================================

# Host de la base de datos
DB_HOST=localhost

# Puerto de la base de datos
DB_PORT=3306

# Nombre de la base de datos
DB_DATABASE=your_database_name

# Usuario de la base de datos
DB_USERNAME=your_database_user

# Contraseña de la base de datos
DB_PASSWORD=your_database_password

# =============================================
# AUTENTICACIÓN Y SEGURIDAD
# =============================================

# Secret key para JWT tokens
JWT_SECRET=your_jwt_secret_key

# Tiempo de expiración del token (en horas o días)
JWT_EXPIRES_IN=24h

# Clave para encriptación de sesiones
SESSION_SECRET=your_session_secret

# =============================================
# SERVICIOS EXTERNOS
# =============================================

# API Keys para servicios externos
EMAIL_API_KEY=your_email_service_api_key
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
CLOUD_STORAGE_KEY=your_cloud_storage_key

# URLs de servicios externos
EMAIL_SERVICE_URL=https://api.emailservice.com
PAYMENT_GATEWAY_URL=https://api.payments.com
CLOUD_STORAGE_URL=https://storage.cloudprovider.com

# =============================================
# CONFIGURACIÓN DE EMAIL
# =============================================

# Servidor de correo saliente
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_ADDRESS=noreply@yourapp.com
MAIL_FROM_NAME=Your App Name

# =============================================
# CONFIGURACIÓN DE FIREBASE (para autenticación y MFA)
# =============================================

# Clave pública del SDK web de Firebase
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key

# Dominio de autenticación de Firebase
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com

# ID del proyecto de Firebase
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id

# Bucket de almacenamiento
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com

# ID del remitente para mensajería
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id

# ID de la aplicación (App ID)
EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# (Opcional) ID de medición para Analytics (solo web)
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# =============================================
# OTRAS CONFIGURACIONES
# =============================================

# Nivel de log (debug, info, warn, error)
LOG_LEVEL=debug

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:3001

# Límite de tamaño para uploads
UPLOAD_MAX_SIZE=10MB